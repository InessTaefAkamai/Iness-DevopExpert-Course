pipeline {
    agent any

    environment {
        GIT_REPOSITORY = 'https://github.com/InessTaefAkamai/Iness-DevopExpert-Course.git'
        DOCKER_REGISTRY = 'itaef'  // Ensure this matches your Docker registry
        DOCKER_CREDENTIALS_ID = 'DOCKER_CREDENTIALS_ID'  // Jenkins credentials ID
        PATH = "/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: "${GIT_REPOSITORY}", branch: 'main'
            }
        }
        stage('Build Docker Images') {
            steps {
                script {
                    // Build the consumer image
                    def consumerImage = docker.build("${DOCKER_REGISTRY}/consumer:3.0.0", "-f k8s-project/consumer/Dockerfile k8s-project/consumer")

                    // Build the producer image
                    def producerImage = docker.build("${DOCKER_REGISTRY}/producer:3.0.0", "-f k8s-project/producer/Dockerfile k8s-project/producer")
                }
            }
        }
        stage('Push Docker Images') {
            steps {
                script {
                    // Retrieve Docker credentials from Jenkins
                    def dockerCredentials = docker.withRegistry("https://${DOCKER_REGISTRY}", DOCKER_CREDENTIALS_ID) {
                        // Log in and push images
                        consumerImage.push()
                        producerImage.push()
                    }
                }
            }
        }
    }
    post {
        success {
            echo 'Build and Push successful!'
        }
        failure {
            echo 'Build or Push failed.'
        }
    }
}
