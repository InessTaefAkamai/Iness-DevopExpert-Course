pipeline {
    agent any

    environment {
        GIT_REPOSITORY = 'https://github.com/InessTaefAkamai/Iness-DevopExpert-Course.git'
        KUBE_CONFIG_ID = 'KUBE_CONFIG_ID'
    }

    stages {
        stage('Checkout Helm Charts Repository') {
            steps {
                git url: "${GIT_REPOSITORY}", branch: 'main'
            }
        }

        stage('Deploy RabbitMQ') {
            steps {
                script {
                    withCredentials([file(credentialsId: KUBE_CONFIG_ID, variable: 'KUBECONFIG')]) {
                        sh "helm upgrade --install rabbitmq ./RabbitMQ -f ./RabbitMQ/values.yaml --namespace k8s-project --create-namespace"
                    }
                }
            }
        }

        stage('Deploy Consumer') {
            steps {
                script {
                    withCredentials([file(credentialsId: KUBE_CONFIG_ID, variable: 'KUBECONFIG')]) {
                        sh "helm upgrade --install consumer ./consumer -f ./consumer/values.yaml --namespace k8s-project"
                    }
                }
            }
        }

        stage('Deploy Producer') {
            steps {
                script {
                    withCredentials([file(credentialsId: KUBE_CONFIG_ID, variable: 'KUBECONFIG')]) {
                        sh "helm upgrade --install producer ./producer -f ./producer/values.yaml --namespace k8s-project"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed.'
        }
    }
}
